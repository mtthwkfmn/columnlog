<% columns = Columnlog::Column.all %>
<div id="columns">
<% columns.each do |column| %>
<div class="column column_<%= column.app_type.underscore %>" id="column_<%= column.name %>" style="width: <%=	 99.4 / columns.length %>%;">
	<h2><%= link_to column.title, column.url %></h2>
	<div class="posts">
		<% column.get.each do |post| %>
		<div class="post">
			<% if post.title %><h3><%= post.title %></h3><% end %>
			<% if post.body %><div class="post_body"><%= post.body %></div><% end %>
			<div class="meta_info"><% if post.posted_at %><i><%= post.posted_at.strftime("%B, %e %Y at %I:%M%p") %></i><% end %><% if post.author %> by <%= post.author %><% end %><% if post.url %>&nbsp;<%= link_to "&raquo;", post.url %><% end %></div>
			<div class="clear"></div>
		</div>
		<% end %>
	</div>
</div>	
<% end %>
<div class="clear"></div>
</div>